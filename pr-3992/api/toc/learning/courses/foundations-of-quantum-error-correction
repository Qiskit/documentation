antum code constructions","collapsible":true,"children":[{"title":"Introduction","url":"/learning/courses/foundations-of-quantum-error-correction/quantum-code-constructions/introduction","collapsible":true,"isExam":false},{"title":"CSS codes","url":"/learning/courses/foundations-of-quantum-error-correction/quantum-code-constructions/css-codes","collapsible":true,"isExam":false},{"title":"Toric code","url":"/learning/courses/foundations-of-quantum-error-correction/quantum-code-constructions/toric-code","collapsible":true,"isExam":false},{"title":"Other code families","url":"/learning/courses/foundations-of-quantum-error-correction/quantum-code-constructions/other-code-families","collapsible":true,"isExam":false}],"isNew":false,"isExam":false},{"title":"Fault-tolerant quantum computing","collapsible":true,"children":[{"title":"Introduction","url":"/learning/courses/foundations-of-quantum-error-correction/fault-tolerant-quantum-computing/introduction","collapsible":true,"isExam":false},{"title":"Approach to fault tolerance","url":"/learning/courses/foundations-of-quantum-error-correction/fault-tolerant-quantum-computing/approach-to-fault-tolerance","collapsible":true,"isExam":false},{"title":"Controlling error propagation","url":"/learning/courses/foundations-of-quantum-error-correction/fault-tolerant-quantum-computing/controlling-error-propagation","collapsible":true,"isExam":false},{"title":"The threshold theorem","url":"/learning/courses/foundations-of-quantum-error-correction/fault-tolerant-quantum-computing/threshold-theorem","collapsible":true,"isExam":false}],"isNew":false,"isExam":false}],"isNew":false,"isExam":false}],"collapsed":true}}