from scripts.tool_runner import run_cmd


def main() -> None:
    run_cmd(["tox", "-e", "lint"])
    run_cmd(["npm", "run", "check"])


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        raise SystemExit(1)
