#!/bin/sh
#
# Configure options script for re-calling Magick+ compilation options
# required to use the Magick++ library.
#
#

prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
pkgconfigdir=${libdir}/pkgconfig
export PKG_CONFIG_LIBDIR="${pkgconfigdir}"

usage='Usage: Magick++-config [--cppflags] [--cxxflags] [--exec-prefix] [--ldflags] [--libs] [--prefix] [--version]

 For example, "magick.cpp" may be compiled to produce "magick" as follows:

  "c++ -o magick magick.cpp `Magick++-config --cppflags --cxxflags --ldflags --libs`"'

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac
  case $1 in
    --prefix=*)
      prefix=$optarg
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo '7.1.1 Q16 HDRI'
      ;;
    --cflags)
      /usr/bin/pkg-config --cflags Magick++-7.Q16HDRI
      ;;
    --cxxflags)
      /usr/bin/pkg-config --cflags Magick++-7.Q16HDRI
      ;;
    --cppflags)
      /usr/bin/pkg-config --cflags Magick++-7.Q16HDRI
      ;;
    --ldflags)
      /usr/bin/pkg-config --libs Magick++-7.Q16HDRI
      ;;
    --libs)
      /usr/bin/pkg-config --libs Magick++-7.Q16HDRI
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

